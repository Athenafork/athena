{
  "batch_size":128,
  "num_epochs":1000,
  "sorta_epoch":1,
  "ckpt":"examples/asr/librispeech/ckpts/transformer_lm",
  "summary_dir":"examples/asr/librispeech/ckpts/transformer_lm/event",

  "solver_gpu":[0, 0],
  "solver_config":{
    "clip_norm":100,
    "log_interval":10,
    "enable_tf_function":true
  },


  "model":"transformerlm",
  "num_classes": null,
  "pretrained_model": null,
  "model_config":{
    "d_model": 1024,
    "num_layer": 16,
    "num_heads": 8,
    "dff": 2048,
    "dropout_rate": 0.1,
    "sos": -1,
    "eos": -1
  },

  "optimizer":"warmup_adam",
  "optimizer_config":{
    "d_model":1024,
    "warmup_steps":50000,
    "k":0.5,
    "decay_steps": 127600,
    "decay_rate": 0.1
  },

  "dataset_builder": "language_dataset",
  "num_data_threads": 1,
  "trainset_config":{
    "data_csv":"examples/asr/librispeech/data/train.trans.csv",
    "input_text_config":{"type": "spm", "model":"examples/asr/librispeech/data/unigram5000.model"},
    "output_text_config":{"type":"spm", "model":"examples/asr/librispeech/data/unigram5000.model"}
  },
  "devset_config":{
    "data_csv":"examples/asr/librispeech/data/dev.trans.csv",
    "input_text_config":{"type": "spm", "model":"examples/asr/librispeech/data/unigram5000newtrain.model"},
    "output_text_config":{"type":"spm", "model":"examples/asr/librispeech/data/unigram5000newtrain.model"}
  }
}
